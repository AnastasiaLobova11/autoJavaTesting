<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"
      fx:controller="com.project.testapplication.controller.AuthController" stylesheets="@css/style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Button text="Администрирование" onAction="#admin" styleClass="button-2"/>
    <Label  text="Введите данные студента:" styleClass="label-main"/>
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

            <Label text="Курс:" GridPane.columnIndex="0"
                   GridPane.rowIndex="0" GridPane.halignment="RIGHT" styleClass="label"/>
            <Label text="Группа:" GridPane.columnIndex="0"
                   GridPane.rowIndex="1" GridPane.halignment="RIGHT" styleClass="label"/>
            <Label text="Фамилия:" GridPane.columnIndex="0"
                   GridPane.rowIndex="2" GridPane.halignment="RIGHT" styleClass="label"/>
            <TextField fx:id="course" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="group" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TextField fx:id="surname" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    <Button text="Вход" onAction="#onHelloButtonClick" styleClass="button-2"/>
</VBox>

