<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/TestApplication?useSSL=false</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">studentkaufy18</property>
        <property name="hibernate.connection.characterEncoding">utf8</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.use_identifier_rollback">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.example.demo.entity.User"/>
        <mapping class="com.example.demo.entity.TestAttempt"/>
        <mapping class="com.example.demo.entity.TestCase"/>

    </session-factory>
</hibernate-configuration>